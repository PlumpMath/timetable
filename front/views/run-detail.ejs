<!DOCTYPE html>
<html lang="ko">
  <%- include head.ejs %>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">
    var runID=<%=id%>
    google.charts.load('current', {'packages':['corechart','line']});
    google.charts.setOnLoadCallback(drawChart);

    function drawChart() {
      var data = google.visualization.arrayToDataTable([
        ['Generation', 'Best', 'Worst'],
        <% for(i=0;i<scores['best'].length;i++) {%>
          [<%=i+1%>,<%=scores['best'][i]%>,<%=scores['worst'][i]%>],  
        <%} %>
      ]);

      var options = {
        title: '유전자 점수',
        subtitle: '낮을수록 좋음',
        legend: { position: 'top' }
      };
      var chart = new google.charts.Line(document.getElementById('div-chart'));
      chart.draw(data, google.charts.Line.convertOptions(options));
    }
  </script>
  <body>
    <%- include nav.ejs %>
    <div class="container">
      <div class="container">
        <div class="row row-menu">
          <button type="button" class="btn btn-primary btn-list" onclick="location.href=/run-list/">< 돌아가기</button>
          <button type="button" class="btn btn-success btn-list" onclick="location.href='/run-input/<%=id%>'">입력 데이터</button>
          <button type="button" class="btn btn-warning btn-list" onclick="location.href='/gene-list/<%=id%>'">유전자 정보</button>
        </div>
        <div class="row">
            <h1><%=title%></h1>
        </div>
        <div class="row">
            <div class="lead">세대 수: <%=info['runCount']%></div>
        </div>
        <div class="row">
            <div class="lead">학생 수: <%=Object.keys(input['people']).length%></div>
        </div>
        <div class="row">
            <div class="lead">수업 수: <%=Object.keys(input['subjects']).length%></div>
        </div>
        <p></p>
        <div class="row">
            <div id="div-chart" style="width: 900px; height: 500px"></div>
        </div>
      </div>
    </div>
    <%- include tail.ejs %>
  </body>
</html>
